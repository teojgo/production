# jg (cscs)
easyblock = 'CMakeMake'

name = 'Serialbox'
version = '2.4.1'

homepage = 'https://github.com/eth-cscs/serialbox2'
description = """Serialbox is a serialization library and tools for C/C++,
Python3 and Fortran."""

toolchain = {'name': 'CrayGNU', 'version': '21.05'}

source_urls = ['https://github.com/eth-cscs/serialbox2/archive/']
sources = ['v%(version)s.tar.gz']

builddependencies = [
    ('CMake', '3.14.5', '', True),
    ('Boost', '1.67.0'),
]

preconfigopts = "module swap gcc gcc/8.3.0 &&"
prebuildopts = "module swap gcc gcc/8.3.0 &&"
configopts = '-DSERIALBOX_ENABLE_FORTRAN=ON'

parallel = 4

separate_build_dir = True

moduleclass = 'devel'
